<header class="bg-white/80 backdrop-blur-xl sticky top-0 z-50 border-b border-stone-200/80">
  <nav class="container mx-auto px-6 py-3 flex justify-between items-center">
    <div class="text-2xl font-black text-primary font-jp">Omiseweb</div>
    <ul class="hidden md:flex gap-8 items-center">
      <li><a href="#solutions" class="text-stone-700 font-medium hover:text-primary transition-colors duration-300">サービス</a></li>
      <li><a href="#cases" class="text-stone-700 font-medium hover:text-primary transition-colors duration-300">制作事例</a></li>
      <li><a href="#pricing" class="text-stone-700 font-medium hover:text-primary transition-colors duration-300">料金</a></li>
      <li><a href="#faq" class="text-stone-700 font-medium hover:text-primary transition-colors duration-300">よくある質問</a></li>
      <li>
        <a href="#contact" class="group btn bg-primary text-white px-6 py-2.5 rounded-lg font-semibold flex items-center gap-2 hover:bg-primary-light hover:-translate-y-0.5 hover:shadow-lg transition-all duration-300 transform">
          <span>無料相談</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </li>
    </ul>
  </nav>
</header>
<script>
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
      if (href) {
        const target = document.querySelector(href);
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      }
    });
  });
</script>
